{
  "name": "ghost-kitchen-orderboard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "composer test",
    "test:unit": "composer test -- --testsuite Unit",
    "test:integration": "composer test -- --testsuite Integration",
    "test:coverage": "composer test -- --coverage-text --coverage-html tests/coverage/html",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:ui": "playwright test --ui",
    "server": "cd public && php -S localhost:8000"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}
